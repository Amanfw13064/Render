<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/js/css/index.css">
</head>
<body>
    <h1>User List</h1>
    <h3><a href="user/new">Create new task</a></h3>
    <table>
        <tr>
            <th>Name</th><th>Email</th><th>Age</th><th>Button</th>
        </tr>
      
          <% items.forEach((user)=>{ %>
            <% console.log(items) %>
            <tr> 
            <td><%= user.name %></td>
            <td><%= user.email %></td> 
            <td><a href="/user/<%= user._id %>/edit">Update</a></td>
            <td><button onclick="showuser('<%= JSON.stringify(user) %>')">click me</button></td>
        </tr>
        <% }) %> 

    </table>
</body>
</html>
<script src="js/index.js"></script>